<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:customData="http://schemas.sapP.com/sapui5/extension/sap.ui.core.CustomData/1">
	<VBox class="sapUiTinyMargin">
		<TextArea width="100%" valueLiveUpdate="true"/>
		<VBox id="idDOAL" width="100%" visible="false">
			<HBox width="100%" alignItems="Center">
				<Label text="{i18n>assignTo}: "/>
				<Select id="idDOA" autoAdjustWidth="true" items="{}">
					<core:Item key="{UserID}" text="{UserID}"/>
				</Select>
			</HBox>
			<!--<CheckBox text="{i18n>autoAssign}"/>-->
		</VBox>
		<ComboBox width="100%" items="{}" placeholder="{i18n>selectRiskRating}" visible="false">
			<core:Item key="{RiskRatingID}" text="{RiskRatingDescription}"/>
		</ComboBox>
		<!--</HBox>-->
	</VBox>
</core:FragmentDefinition>